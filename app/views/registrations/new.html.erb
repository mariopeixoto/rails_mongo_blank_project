<% title t("sign.up") %>

<div class="page-header">
	<h1><%=t "sign.up" %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => user_registration_path) do |f| %>
	<%= devise_error_messages! %>
	<fieldset>
		<div class="clearfix">
			<%= f.label :username %>
			<div class="input">
				<%= f.text_field :username, :class => "xlarge" %>
			</div>
		</div>
		<div class="clearfix">
			<%= f.label :email %>
			<div class="input">
				<%= f.text_field :email, :class => "xlarge" %>
			</div>
		</div>
		<div class="clearfix">
			<%= f.label :password %>
			<div class="input">
				<%= f.password_field :password, :class => "xlarge" %>
			</div>
		</div>
		<div class="clearfix">
			<%= f.label :password_confirmation %>
			<div class="input">
				<%= f.password_field :password_confirmation, :class => "xlarge" %>
			</div>
		</div>
		<div class="actions">
			<button type="submit" class="btn large primary"><%=t "sign.up" %></button>
		</div>
	</fieldset>
<% end %>