<% title t("password.forgot") %>

<div class="page-header">
	<h1><%=t "password.forgot" %></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= devise_error_messages! %>
	<fieldset>
		<div class="clearfix">
			<%= f.label :email %>
			<div class="input">
				<%= f.text_field :email, :class => "xlarge" %>
			</div>
		</div>
		<div class="actions">
			<button type="submit" class="btn large primary"><%=t "password.reset" %></button>
		</div>
	</fieldset>
<% end %>