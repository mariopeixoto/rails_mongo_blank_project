<% title t("password.change") %>

<div class="page-header">
	<h1><%= t "password.change" %></h1>
</div>

<%= form_for(resource, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	<%= devise_error_messages! %>
	<%= f.hidden_field :reset_password_token %>
	<fieldset>
		<div class="clearfix">
			<%= f.label :password %>
			<div class="input">
				<%= f.password_field :password, :class => "xlarge" %>
			</div>
		</div>
		<div class="clearfix">
			<%= f.label :password_confirmation %>
			<div class="input">
				<%= f.password_field :password_confirmation, :class => "xlarge" %>
			</div>
		</div>
		<div class="actions">
			<button type="submit" class="btn large primary"><%= t "password.change" %></button>
		</div>
	</fieldset>
<% end %>