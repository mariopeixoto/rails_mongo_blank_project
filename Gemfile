  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'devise'
gem 'mm-devise'
gem 'cancan'
gem 'oa-openid', :require => 'omniauth/openid'
gem 'omniauth'
gem 'img_gravatar'
gem 'will_paginate'

gem 'mongrel', '~> 1.2.0.pre2', :group => :development

#rspec
group :test do
